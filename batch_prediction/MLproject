name: batch_prediction
conda_env: conda.yml

entry_points:
  main:
    parameters:
      reg_model:
        description: An MLflow serialized Regression model for predicting temperature and precipitation
        type: string

      class_model:
        description: An MLflow serialized Classification model for predicting weathercodes
        type: string

      full_dataset:
        description: Full training dataset with the latest data
        type: string

      batch_prediction:
        description: Weather prediction produced on the last run
        type: string

    command: "python run.py --reg_model {reg_model} --class_model {class_model} --full_dataset {full_dataset} --batch_prediction {batch_prediction}"