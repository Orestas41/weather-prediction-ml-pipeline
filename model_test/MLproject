name: model_test
conda_env: conda.yml

entry_points:
  main:
    parameters:
      performance_records:
        description: description
        type: string

      reg_model:
        description: An MLflow serialized model
        type: string

      class_model:
        description: An MLflow serialized model
        type: string

      test_dataset:
        description: The test artifact
        type: string

    command: "python run.py  --reg_model {reg_model} --class_model {class_model} --test_dataset {test_dataset} --performance_records {performance_records}"