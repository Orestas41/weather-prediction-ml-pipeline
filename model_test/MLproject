entry_points:
  main:
    parameters:
      reg_model:
        description: An MLflow serialized model
        type: string

      class_model:
        description: An MLflow serialized model
        type: string

      test_dataset:
        description: The test artifact
        type: string

    command: "python run.py  --reg_model {reg_model} --class_model {class_model} --test_dataset {test_dataset}"