name: pre-processing
conda_env: conda.yml

entry_points:
  main:
    parameters:
      output_artifact:
        description: Name of the output artifact
        type: string
        default: training_data.csv

      output_type:
        description: Type of the output artifact
        type: string

      output_description:
        description: Description of the output artifact
        type: string
        default: New data merged with previous training data

    command: >-
      python run.py  --output_artifact {output_artifact}  --output_type {output_type} --output_description {output_description}